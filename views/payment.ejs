<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - Campus Trade</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">
                    <i class="fas fa-store"></i>
                    Campus Trade
                </a>
                
                <nav>
                    <ul class="nav-menu">
                        <li><a href="/pro" class="nav-link">Browse Products</a></li>
                        <li><a href="/create" class="nav-link">Add Product</a></li>
                        <li><a href="/up" class="nav-link">My Profile</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="payment-container">
                <div class="payment-card">
                    <div class="payment-header">
                        <h1>Complete Your Purchase</h1>
                        <p>Choose your preferred payment method</p>
                    </div>

                    <!-- Product Details -->
                    <div class="product-summary">
                        <div class="product-image">
                            <% if (post.image_url) { %>
                                <img src="<%= post.image_url %>" alt="<%= post.title %>">
                            <% } else { %>
                                <div class="no-image">
                                    <i class="fas fa-image"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="product-details">
                            <h3><%= post.title %></h3>
                            <p class="product-description"><%= post.content %></p>
                            <div class="product-meta">
                                <div class="meta-item">
                                    <i class="fas fa-user"></i>
                                    <span>Seller: <%= post.user_email %></span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-phone"></i>
                                    <span><%= post.mobile_number %></span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-envelope"></i>
                                    <span><%= post.email_address %></span>
                                </div>
                            </div>
                            <div class="product-price">
                                <span class="price-label">Total Amount:</span>
                                <span class="price-value">₹<%= post.expected_amount %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Methods -->
                    <div class="payment-methods">
                        <h3>Select Payment Method</h3>
                        
                        <div class="payment-options">
                            <!-- UPI Payment -->
                            <div class="payment-option" onclick="selectPayment('upi')">
                                <div class="payment-icon">
                                    <img src="/upi.jpeg" alt="UPI">
                                </div>
                                <div class="payment-info">
                                    <h4>UPI Payment</h4>
                                    <p>Pay using UPI apps like Google Pay, PhonePe, Paytm</p>
                                </div>
                                <div class="payment-radio">
                                    <input type="radio" name="paymentMethod" id="upi" value="upi">
                                    <label for="upi"></label>
                                </div>
                            </div>

                            <!-- QR Code Payment -->
                            <div class="payment-option" onclick="selectPayment('qr')">
                                <div class="payment-icon">
                                    <img src="/qr.jpeg" alt="QR Code">
                                </div>
                                <div class="payment-info">
                                    <h4>QR Code Payment</h4>
                                    <p>Scan QR code with any UPI app</p>
                                </div>
                                <div class="payment-radio">
                                    <input type="radio" name="paymentMethod" id="qr" value="qr">
                                    <label for="qr"></label>
                                </div>
                            </div>

                            <!-- Credit/Debit Card -->
                            <div class="payment-option" onclick="selectPayment('card')">
                                <div class="payment-icon">
                                    <img src="/credit.jpg" alt="Card">
                                </div>
                                <div class="payment-info">
                                    <h4>Credit/Debit Card</h4>
                                    <p>Pay securely with your card</p>
                                </div>
                                <div class="payment-radio">
                                    <input type="radio" name="paymentMethod" id="card" value="card">
                                    <label for="card"></label>
                                </div>
                            </div>

                            <!-- Cash on Delivery -->
                            <div class="payment-option" onclick="selectPayment('cod')">
                                <div class="payment-icon">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <div class="payment-info">
                                    <h4>Cash on Delivery</h4>
                                    <p>Pay when you receive the item</p>
                                </div>
                                <div class="payment-radio">
                                    <input type="radio" name="paymentMethod" id="cod" value="cod">
                                    <label for="cod"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Summary -->
                    <div class="payment-summary">
                        <div class="summary-item">
                            <span>Product Price:</span>
                            <span>₹<%= post.expected_amount %></span>
                        </div>
                        <div class="summary-item">
                            <span>Transaction Fee:</span>
                            <span>₹0</span>
                        </div>
                        <div class="summary-item total">
                            <span>Total Amount:</span>
                            <span>₹<%= post.expected_amount %></span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="payment-actions">
                        <button type="button" class="btn btn-outline" onclick="window.location.href='/pro'">
                            <i class="fas fa-arrow-left"></i> Back to Products
                        </button>
                        <button type="button" class="btn btn-primary btn-lg" onclick="processPayment()" id="payButton">
                            <i class="fas fa-lock"></i> Pay Securely
                        </button>
                    </div>

                    <!-- Security Notice -->
                    <div class="security-notice">
                        <i class="fas fa-shield-alt"></i>
                        <p>Your payment information is secure and encrypted. We never store your card details.</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Campus Trade</h3>
                    <p>Your trusted marketplace for campus commerce.</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="/pro">Browse Products</a>
                    <a href="/create">Add Product</a>
                    <a href="/up">My Profile</a>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>Email: support@campustrade.com</p>
                    <p>Phone: +91 1234567890</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Campus Trade. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <style>
        .payment-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem 0;
        }

        .payment-card {
            background: var(--bg-primary);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-xl);
            padding: 3rem;
        }

        .payment-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .payment-header h1 {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .payment-header p {
            color: var(--text-secondary);
            font-size: 1.125rem;
        }

        .product-summary {
            display: flex;
            gap: 2rem;
            padding: 2rem;
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
            margin-bottom: 3rem;
        }

        .product-image {
            flex-shrink: 0;
            width: 150px;
            height: 150px;
            border-radius: var(--radius-lg);
            overflow: hidden;
            background: var(--bg-tertiary);
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .no-image {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light);
            font-size: 3rem;
        }

        .product-details {
            flex: 1;
        }

        .product-details h3 {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .product-description {
            color: var(--text-secondary);
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .product-meta {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .meta-item i {
            color: var(--primary-color);
            width: 16px;
        }

        .product-price {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .price-label {
            color: var(--text-secondary);
            font-weight: 500;
        }

        .price-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .payment-methods {
            margin-bottom: 3rem;
        }

        .payment-methods h3 {
            color: var(--text-primary);
            margin-bottom: 1.5rem;
        }

        .payment-options {
            display: grid;
            gap: 1rem;
        }

        .payment-option {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            padding: 1.5rem;
            border: 2px solid var(--border-color);
            border-radius: var(--radius-lg);
            cursor: pointer;
            transition: all 0.3s ease;
            background: var(--bg-secondary);
        }

        .payment-option:hover {
            border-color: var(--primary-color);
            background: var(--bg-tertiary);
        }

        .payment-option.selected {
            border-color: var(--primary-color);
            background: var(--bg-tertiary);
        }

        .payment-icon {
            width: 60px;
            height: 60px;
            border-radius: var(--radius-md);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            box-shadow: var(--shadow-sm);
        }

        .payment-icon img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .payment-icon i {
            font-size: 2rem;
            color: var(--primary-color);
        }

        .payment-info {
            flex: 1;
        }

        .payment-info h4 {
            color: var(--text-primary);
            margin-bottom: 0.25rem;
        }

        .payment-info p {
            color: var(--text-secondary);
            font-size: 0.875rem;
            margin: 0;
        }

        .payment-radio {
            position: relative;
        }

        .payment-radio input[type="radio"] {
            opacity: 0;
            position: absolute;
        }

        .payment-radio label {
            display: block;
            width: 20px;
            height: 20px;
            border: 2px solid var(--border-color);
            border-radius: 50%;
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
        }

        .payment-radio input[type="radio"]:checked + label {
            border-color: var(--primary-color);
            background: var(--primary-color);
        }

        .payment-radio input[type="radio"]:checked + label::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
        }

        .payment-summary {
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--border-color);
        }

        .summary-item:last-child {
            border-bottom: none;
        }

        .summary-item.total {
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--text-primary);
            border-top: 2px solid var(--border-color);
            padding-top: 1rem;
            margin-top: 0.5rem;
        }

        .payment-actions {
            display: flex;
            gap: 1rem;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .security-notice {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            background: #ecfdf5;
            border: 1px solid #a7f3d0;
            border-radius: var(--radius-lg);
            color: #065f46;
        }

        .security-notice i {
            font-size: 1.5rem;
            color: var(--success-color);
        }

        .security-notice p {
            margin: 0;
            font-size: 0.875rem;
        }

        @media (max-width: 768px) {
            .payment-card {
                padding: 2rem;
                margin: 1rem;
            }
            
            .product-summary {
                flex-direction: column;
                text-align: center;
            }
            
            .product-image {
                align-self: center;
            }
            
            .payment-actions {
                flex-direction: column;
            }
            
            .payment-actions .btn {
                width: 100%;
            }
        }
    </style>

    <script>
        function selectPayment(method) {
            // Remove selected class from all options
            document.querySelectorAll('.payment-option').forEach(option => {
                option.classList.remove('selected');
            });
            
            // Add selected class to clicked option
            event.currentTarget.classList.add('selected');
            
            // Check the radio button
            document.getElementById(method).checked = true;
        }

        function processPayment() {
            const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked');
            
            if (!selectedMethod) {
                alert('Please select a payment method');
                return;
            }
            
            const method = selectedMethod.value;
            const payButton = document.getElementById('payButton');
            
            // Add loading state
            payButton.innerHTML = '<span class="loading"></span> Processing Payment...';
            payButton.disabled = true;
            
            // Simulate payment processing
            setTimeout(() => {
                switch(method) {
                    case 'upi':
                        alert('Redirecting to UPI payment...\nPlease complete the payment in your UPI app.');
                        break;
                    case 'qr':
                        alert('Please scan the QR code with your UPI app to complete the payment.');
                        break;
                    case 'card':
                        alert('Redirecting to secure payment gateway...\nPlease enter your card details.');
                        break;
                    case 'cod':
                        alert('Order placed successfully!\nYou will pay ₹<%= post.expected_amount %> when you receive the item.');
                        break;
                }
                
                // Reset button
                payButton.innerHTML = '<i class="fas fa-lock"></i> Pay Securely';
                payButton.disabled = false;
                
                // Redirect to products page after a delay
                setTimeout(() => {
                    window.location.href = '/pro';
                }, 2000);
            }, 2000);
        }

        // Add click handlers for payment options
        document.querySelectorAll('.payment-option').forEach(option => {
            option.addEventListener('click', function() {
                const radioId = this.querySelector('input[type="radio"]').id;
                selectPayment(radioId);
            });
        });
    </script>
</body>
</html>
