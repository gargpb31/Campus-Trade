<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Trade - Products</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">
                    <i class="fas fa-store"></i>
                    Campus Trade
                </a>

                <!-- Search Bar -->
                <div class="search-container">
                    <i class="fas fa-search search-icon"></i>
                    <form action="/search" method="GET" class="d-flex">
                        <input type="search" class="search-input" placeholder="Search products..." name="q" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    </form>
                </div>

                <!-- Navigation -->
                <nav>
                    <ul class="nav-menu">
                        <li><a href="/create" class="nav-link btn btn-primary">
                            <i class="fas fa-plus"></i> Add Product
                        </a></li>
                    </ul>
                </nav>

                <!-- User Menu -->
                <div class="user-menu">
                    <img src="/vecteezy_default-profile-account-unknown-icon-black-silhouette_20765399.jpg" alt="Profile" class="user-avatar" id="userAvatar">
                    <div class="dropdown-menu" id="userDropdown">
                        <% if (userRole && userRole === 'admin') { %>
                            <a href="/admin/users" class="dropdown-item">
                                <i class="fas fa-users"></i> Manage Users
                            </a>
                            <a href="/admin/products" class="dropdown-item">
                                <i class="fas fa-box"></i> Manage Products
                            </a>
                            <div class="dropdown-divider"></div>
                        <% } %>
                        <a href="/up" class="dropdown-item">
                            <i class="fas fa-user"></i> My Profile
                        </a>
                        <a href="/edit-profile" class="dropdown-item">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Sign Out
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Page Header -->
            <div class="text-center mb-6">
                <h1 class="mb-2">Discover Campus Products</h1>
                <p class="text-secondary">Find amazing deals from your fellow students</p>
            </div>

            <!-- Products Grid -->
            <% if (posts && posts.length === 0) { %>
                <div class="text-center py-8">
                    <i class="fas fa-box-open" style="font-size: 4rem; color: var(--text-light); margin-bottom: 1rem;"></i>
                    <h3 class="mb-2">No Products Available</h3>
                    <p class="text-secondary mb-4">Be the first to list a product!</p>
                    <a href="/create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i> Add Your First Product
                    </a>
                </div>
            <% } else { %>
                <div class="products-grid">
                    <% posts.forEach(post => { %>
                        <div class="card product-card">
                            <!-- Product Image -->
                            <div class="product-image-container">
                                <% if (post.image_url) { %>
                                    <img src="<%= post.image_url %>" alt="<%= post.title %>" class="product-image">
                                <% } else { %>
                                    <div class="product-image-placeholder">
                                        <i class="fas fa-image"></i>
                                    </div>
                                <% } %>
                                <div class="product-overlay">
                                    <a href="/payment/<%= post.id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-shopping-cart"></i> Buy Now
                                    </a>
                                </div>
                            </div>

                            <!-- Product Content -->
                            <div class="product-content">
                                <h3 class="product-title"><%= post.title %></h3>
                                <p class="product-description"><%= post.content %></p>
                                
                                <!-- Product Meta -->
                                <div class="product-meta">
                                    <div class="product-meta-item">
                                        <i class="fas fa-phone"></i>
                                        <span><%= post.mobile_number %></span>
                                    </div>
                                    <div class="product-meta-item">
                                        <i class="fas fa-envelope"></i>
                                        <span><%= post.email_address %></span>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="product-price">
                                    â‚¹<%= post.expected_amount %>
                                </div>

                                <!-- Actions -->
                                <div class="product-actions">
                                    <a href="/payment/<%= post.id %>" class="btn btn-success">
                                        <i class="fas fa-shopping-cart"></i> Buy Now
                                    </a>
                                    <a href="mailto:<%= post.email_address %>?subject=Interested%20in%20your%20product&body=Hi,%0D%0AI%20am%20interested%20in%20your%20product." class="btn btn-warning">
                                        <i class="fas fa-comments"></i> Chat
                                    </a>
                                    <% if (post.user_email === userEmail) { %>
                                        <a href="/edit/<%= post.id %>" class="btn btn-outline">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?')">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Campus Trade</h3>
                    <p>Your trusted marketplace for campus commerce. Buy, sell, and connect with fellow students.</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="/features">Features</a>
                    <a href="/about">About Us</a>
                    <a href="/create">Add Product</a>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>Email: support@campustrade.com</p>
                    <p>Phone: +91 1234567890</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Campus Trade. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // User dropdown functionality
        document.getElementById('userAvatar').addEventListener('click', function() {
            document.getElementById('userDropdown').classList.toggle('show');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('userDropdown');
            const avatar = document.getElementById('userAvatar');
            
            if (!avatar.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });

        // Add loading states to forms
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function() {
                const submitBtn = form.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<span class="loading"></span> Processing...';
                    submitBtn.disabled = true;
                }
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
